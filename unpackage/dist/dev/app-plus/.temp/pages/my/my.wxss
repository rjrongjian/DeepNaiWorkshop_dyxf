@import "../../common/vendor.wxss";

.header-1 {
  background-color: #79E8D0;
  height: 480rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
  padding-top: 35rpx;
}
.header-1-login {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: end;
  -webkit-justify-content: flex-end;
  justify-content: flex-end;
  width: 100%;
}
.header-1-login-button {
  width: 75rpx;
  background-color: #79E8D0;
  margin-top: 5rpx;
  margin-right: 15rpx;
  line-height: 36rpx;
  color: #FFFFFF;
  border-bottom: 2rpx solid #FFFFFF;
  padding: 6rpx 6rpx 6rpx 6rpx;
}
.header-1-image {
  border-radius: 50% 50%;
  border: 15rpx solid rgba(111, 111, 111, 0.1);
  height: 180rpx;
  width: 180rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, .3);
}
.header-1-image-card {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
}
.header-1-account {
  margin: 35rpx auto 0 auto;
  line-height: 36rpx;
  color: #FFFFFF;
}
.header-1-expire-time {
  margin: 18rpx auto 0 auto;
  line-height: 32rpx;
  color: #FFFFFF;
}
.bottom-1 {
  background-color: #FFFFFF;
  top: -40rpx;
  border-radius: 8rpx;
  margin: 0 30rpx;
  position: relative;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, .3);
  padding-bottom: 15rpx;
}
.content-1 {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
  background-color: #efeff4;
}
.uni-list-cell-font-color {
  color: #444444;
}
.uni-list-cell-navigate-1 {
  padding: 22rpx 30rpx;
  line-height: 40rpx;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  width: 100%;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.uni-list-cell-navigate-1.uni-navigate-right:after {
  font-family: uniicons;
  content: '\E583';
  position: absolute;
  right: 24rpx;
  top: 50%;
  color: #bbb;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
}